.btn-add
  position: fixed;
  top: auto;
  right: 20px;
  bottom: 20px;
  width: 56px;
  height: 56px;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,.26);
  border-radius: 50%;
  display: flex
  align-items: center
  justify-content: center
  font-size: 34px
  background-color: $CUSTOM-RED
  color: $WHITE
  &:hover
    opacity: .8
    transition: all 0.3s
